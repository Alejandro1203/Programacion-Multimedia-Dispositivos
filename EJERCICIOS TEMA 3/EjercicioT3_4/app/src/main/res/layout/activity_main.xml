<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#CDCED4"
    android:columnCount="4"
    android:rowCount="6">

    <Button
        android:text="1"
        android:layout_rowSpan="2"
        android:layout_gravity="bottom">
    </Button>

    <Button
        android:text="2"
        android:layout_rowSpan="2"
        android:layout_gravity="bottom">
    </Button>

    <Button
        android:text="3"
        android:layout_rowSpan="2"
        android:layout_gravity="bottom">
    </Button>

    <Button android:text="/"></Button>

    <Button android:text="*"></Button>

    <Button android:text="4"></Button>

    <Button android:text="5"></Button>

    <Button android:text="6"></Button>

    <Button android:text="-"></Button>

    <Button android:text="7"></Button>

    <Button android:text="8"></Button>

    <Button android:text="9"></Button>

    <Button
        android:text="+"
        android:layout_rowSpan="3"
        android:layout_gravity="fill">
    </Button>

    <Button
        android:text="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill">
    </Button>

    <Button android:text="00"></Button>

    <Button
        android:text="="
        android:layout_columnSpan="3"
        android:layout_gravity="fill">
    </Button>
</GridLayout>