<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/txt1"
        android:text="Mi primera aplicaciÃ³n en Android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:typeface="sans"
        android:textColor="#FF0000"
        android:textStyle="bold|italic"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt2"
        android:text="Introduce los siguientes datos: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B6FFFF">

        <TextView
            android:id="@+id/txt3"
            android:text="Nombre: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt4"
            android:text="Clave: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@id/txt3"/>

        <EditText
            android:id="@+id/edt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Introduce el nombre"
            android:maxLength="40"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/txt3"/>

        <EditText
            android:id="@+id/edt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Introduce la clave"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textSize="15sp"
            android:layout_marginLeft="47dp"
            android:layout_below="@id/edt1"
            android:layout_toRightOf="@id/txt4"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESETEAR"
        android:layout_gravity="right"/>

</LinearLayout>